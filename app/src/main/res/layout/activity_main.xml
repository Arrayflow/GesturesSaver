<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/gestureName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#c3c3c3"
            android:textSize="20sp"
            android:text="请画出手势"
            android:gravity="center" />

        <com.example.gesturessaver.ui.GestureView
            android:id="@+id/signature"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#000" />

        <View
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:background="#c3c3c3" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/save"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="保存" />

        <Button
            android:id="@+id/clear"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="清除" />

        <Button
            android:id="@+id/startRec"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="识别手势" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="手势选择"
                android:textSize="15sp"
                android:gravity="center"
                android:textColor="#000" />

            <ScrollView
                android:fillViewport="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <RadioGroup
                        android:layout_marginLeft="5dp"
                        android:id="@+id/gestureRadioBtns"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <RadioButton
                            android:id="@+id/ERASER_RECT"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="画删除线"
                            android:textSize="15sp" />

                        <RadioButton
                            android:id="@+id/SELECT_CIRCLE"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="画圆圈框选"
                            android:textSize="15sp" />

                        <RadioButton
                            android:id="@+id/INSERT_SPACE_LINE_DOWN"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="画下直线空格"
                            android:textSize="15sp" />

                        <RadioButton
                            android:id="@+id/INSERT_TEXT_LINE_DOWN"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="画下开口插入"
                            android:textSize="15sp" />

                        <RadioButton
                            android:id="@+id/INSERT_TEXT_LINE_UP"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="画上开口插入"
                            android:textSize="15sp" />
                        <RadioButton
                            android:id="@+id/KEY_ENTER"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="画左折线回车"
                            android:textSize="15sp" />
                        <RadioButton
                            android:id="@+id/KEY_TAB"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="画箭头TAB"
                            android:textSize="15sp" />
                        <RadioButton
                            android:id="@+id/SELECT_RECT"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="画矩形选中"
                            android:textSize="15sp" />
                        <RadioButton
                            android:id="@+id/SELECT_LINE"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="画横线选中"
                            android:textSize="15sp"
                            android:visibility="invisible" />

                        <RadioButton
                            android:id="@+id/INSERT_SPACE_LINE_UP"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="画上直线空格"
                            android:textSize="15sp"
                            android:visibility="invisible" />

                    </RadioGroup>

                </LinearLayout>

            </ScrollView>

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#000"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="模式选择"
                android:textSize="15sp"
                android:gravity="center"
                android:textColor="#000" />

            <RadioGroup
                android:id="@+id/saveRadioBtns"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <RadioButton
                    android:id="@+id/recognizeSelected"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="识别模式"
                    android:textSize="15sp" />

                <RadioButton
                    android:id="@+id/saveSelected"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="保存模式"
                    android:textSize="15sp" />

            </RadioGroup>

        </LinearLayout>

    </LinearLayout>



</LinearLayout>